@model InforceTestTask.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>URLS</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 0px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            header a {
                color: #fff;
                text-decoration: none;
                font-weight: bold;
                font-size: 18.5px;
                margin: 0 10px;
            }

                header a:hover {
                    color: #f5a742;
                }

        main {
            padding: 20px;
        }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 7px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .account-icon {
            font-size: 40px;
            margin-right: 15px;
            margin-top: 5px;
            cursor: pointer;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 210px;
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            z-index: 1;
            right: 0;
            border-radius: 5px;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #f1f1f1;
            }

        button {
            background-color: #905B22;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 10px;
            margin-top: 10px;
        }

            button:hover {
                background-color: #f5a742;
            }

        .confirmation-model {
            display: flex;
            justify-content: center;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 9999;
        }

        .confirmation-box {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }

            .confirmation-box h2 {
                margin-top: 0;
            }

            .confirmation-box button {
                margin-top: 10px;
                margin-right: 10px;
            }

        .model {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.4);
            padding-top: 60px;
            /
        }

        .model-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 20%;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }
        .add-url {
            display: flex;
            justify-content: center;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 9999;
        }
        .add-url a{
                background-color: #905B22;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
                margin-right: 10px;
                margin-top: 10px;
        }

        input[type="text"],
        select {
            width: 90%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <header>
        <span style="font-weight: bold; font-size: 20px; margin-left: 10px;">InforceTestTask</span>
        <a>Вітаємо, @Model.Login</a>
        <a href="@Url.Action("About","URL", new {user = Model})">Про алгоритм скорочення</a>
        <a href="#" onclick="showShortingBox()">Додати URL</a>
        <div class="dropdown">
            <i class="material-icons account-icon" onclick="toggleDropdown()">account_circle</i>
            <div class="dropdown-content" id="dropdownMenu">
                <a href="#" onclick="showConfirmationModel()">Вихід</a>
            </div>
        </div>
    </header>
     <div id="confirmationModel" class="confirmation-model" style="display: none;">
        <div class="confirmation-box">
            <h2 style="text-align: center;">Підтвердіть вихід</h2>
            <p>Ви впевнені, що хочете вийти з облікового запису?</p>
            <button onclick="logout()" style="float: left; margin-left: 50px; padding: 10px 30px;">Так</button>
            <button onclick="hideConfirmationModel()" style="float: right; margin-right: 50px; padding: 10px 30px;">Ні</button>
        </div>
    </div>
    <form asp-controller="URL" asp-action="ShortUrl" method="post">
        <div id="addUrl" class="add-url" style="display:none;">
            <div class="confirmation-box">
                <h2 style="text-align: center;">Введіть URL</h2>
                <input type="text" name="originalUrl" placeholder="Введіть URL">
                <input type="hidden" name="user.Id" value="@Model?.Id" />
                <input type="hidden" name="user.Login" value="@Model?.Login" />
                <input type="hidden" name="user.PasswordHash" value="@Model?.PasswordHash" />
                <input type="hidden" name="user.UserType" value="@Model?.UserType" />
                <button type="submit" style="float: left; margin-left: 50px; padding: 10px 30px;">Скоротити</button>
                <a href="#" onclick="hideAddUrl()" style="float: right; margin-right: 50px; padding: 10px 30px;">Скасувати</a>
            </div>
        </div>
    </form>
    <script>
        function showConfirmationModel() {
            document.getElementById('confirmationModel').style.display = 'flex';
        }

        function hideConfirmationModel() {
            document.getElementById('confirmationModel').style.display = 'none';
        }

        function logout() {
            window.location.href = "/Authentication/Login";
        }

        window.onclick = function (event) {
            var model = document.getElementById('confirmationModel');
            if (event.target == model) {
                hideConfirmationModel();
            }
        }

        function showShortingBox() { 
            document.getElementById('addUrl').style.display = 'flex';
        }

        function hideAddUrl() {
            document.getElementById('addUrl').style.display = 'none';
        }
    </script>
</body>
</html>